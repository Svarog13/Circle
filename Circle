#include <iostream>
#include <cmath>
using namespace std;

void main()
{
	    //Завдання 4. За заданою довжиною окружності C знайти
		//площу кола за формулою S = pi * R2, радіус обчислити
		//з формули довжини кола : L = 2 * pi * R.
		//Примітка : pi = 3.14.

	const float Pi = 3.14;
	float C ;
	cout << "Enter the length of the circle's circumference: " << endl;
	cin >> C;
	float R = C / (3.14 * 3.14);
	float S = Pi*(R * R);
	float L = 2 * Pi * R;
	
	cout << "R = C/2Pi " << R << endl;
	cout << "S = Pi * R2 " << S << endl;
	cout << "L = 2 * pi * R " << L << endl;

}
